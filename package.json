{
  "name": "leystar-api",
  "version": "1.0.0",
  "description": "API for serving manuscript data from Google Cloud Storage",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "dev:api": "nodemon server.js",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "build:frontend": "cd src/frontend && npm install && npm run build",
    "build": "npm run build:frontend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@google-cloud/storage": "^6.12.0",
    "ansi-colors": "^4.1.3",
    "cli-progress": "^3.12.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "sharp": "^0.33.5",
    "stream": "^0.0.3",
    "util": "^0.12.5",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "concurrently": "^9.1.2",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "UNLICENSED"
}
